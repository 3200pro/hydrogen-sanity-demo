{
  "name": "hydrogen-app",
  "description": "This the default template for Hydrogen",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env LOCAL_DEV=true shopify hydrogen dev",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --resolve-plugins-relative-to . --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx src",
    "lint:css": "stylelint ./src/**/*.{css,sass,scss}",
    "build": "yarn build:client && yarn build:server && yarn build:worker",
    "build:client": "vite build --outDir dist/client --manifest",
    "build:server": "vite build --outDir dist/server --ssr @shopify/hydrogen/platforms/node",
    "build:worker": "cross-env WORKER=true vite build --outDir dist/worker --ssr @shopify/hydrogen/platforms/worker",
    "serve": "node --enable-source-maps dist/server",
    "test": "WATCH=true vitest",
    "test:ci": "yarn build && vitest run",
    "preview": "shopify hydrogen preview"
  },
  "prettier": "@shopify/prettier-config",
  "devDependencies": {
    "@shopify/cli": "1.0.9",
    "@shopify/cli-hydrogen": "2.0.0",
    "@shopify/prettier-config": "^1.1.2",
    "@shopify/stylelint-plugin": "^10.0.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-plugin-hydrogen": "^0.12.1",
    "eslint-plugin-jest": "^26.2.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.19.2",
    "postcss": "^8.4.5",
    "prettier": "^2.3.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "stylelint": "^13.13.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.0",
    "vitest": "^0.5.9"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.2",
    "@heroicons/react": "^1.0.6",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/image-url": "^1.0.1",
    "@sanity/types": "^2.29.5",
    "@shopify/hydrogen": "^0.20.0",
    "@tippyjs/react": "^4.2.6",
    "body-parser": "^1.20.0",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "graphql-tag": "^2.12.4",
    "groq": "^2.15.0",
    "hydrogen-plugin-sanity": "^0.4.0",
    "pluralize": "^8.0.0",
    "react": "0.0.0-experimental-2bf7c02f0-20220314",
    "react-dom": "0.0.0-experimental-2bf7c02f0-20220314",
    "serve-static": "^1.14.1"
  }
}
